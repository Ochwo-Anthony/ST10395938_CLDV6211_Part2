@model ST10395938_CLDV6211_POEPart1.Models.Bookings

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Booking</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="BookingId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="EventId" class="form-label"></label>
                    <select asp-for="EventId" class="form-select" asp-items="ViewBag.Events"></select>
                    <span asp-validation-for="EventId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VenueId" class="form-label"></label>
                    <select asp-for="VenueId" class="form-select" asp-items="ViewBag.Venues"></select>
                    <span asp-validation-for="VenueId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BookingDate" class="form-label"></label>
                    <input asp-for="BookingDate" class="form-control" />
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
