@model ST10395938_CLDV6211_POEPart1.Models.Venues
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Venue</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this venue?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.VenueName</dd>
                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.VenueLocation</dd>
                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.VenueCapacity</dd>
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 150px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="VenueId" />
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
